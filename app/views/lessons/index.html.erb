<%= form_tag lessons_path, :method => :get, class: "form-horizontal search-form" do %>
  <div class="form-content">
    <div class="form-group">
      <%= label_tag :age, 'Age', class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= select_tag :age, options_for_select(Lesson.ages.collect{ |k,v| [Lesson.age_to_string(k.to_sym), v] }, params[:age]), {:prompt => "--Select age--", class: "form-control"} %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :level, 'Level', class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= select_tag :level, options_for_select(Lesson.levels.collect{ |k,v| [Lesson.level_to_string(k.to_sym), v] }, params[:level]), {:prompt => "--Select level--", class: "form-control"} %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :progress, 'Progress', class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= select_tag :progress, options_for_select(StudentLesson::PROGRESS.collect{ |k,v| [StudentLesson.progress_to_string(k.to_sym), v] }, params[:progress]), {:prompt => "--Select progress--", class: "form-control"} %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-4">
        <%= submit_tag "Load", data: { disable_with: "Please wait.." }, class: "form-control btn btn-success btn-flat" %>
      </div>
    </div>
  </div>
<% end %>

<h4>Lessons</h4>
<%= render "lessons" %>
