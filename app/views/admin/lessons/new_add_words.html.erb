<%= @lesson.name %>
<%= semantic_form_for @lesson, :url => add_words_admin_lesson_path, method: :patch do |f| %>
    <%= f.inputs do %>
        <%= f.input :name %>
        <%= f.input :level %>
        <%= f.input :age %>
        <%= f.input :description %>
        <%= f.input :word_ids, as: :check_boxes, collection: Word.all, member_label: Proc.new { |w| "#{w.origin} (#{w.meaning})" }, label: "Words" %>
    <% end %>
    <%= f.submit "Update" %>
<% end %>
